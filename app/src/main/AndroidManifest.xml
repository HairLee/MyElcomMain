<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.elcom.hailpt">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:name=".AApp"
        android:allowBackup="true"
        android:icon="@drawable/logo_ic"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/MyMaterialTheme.Base">
        <activity android:name=".view.ui.activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.ui.SourcesActivity" />
        <activity android:name=".view.ui.DetailActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity android:name=".view.ui.MainActivity" />
        <activity
            android:name=".view.ui.HomeActivity"
            android:configChanges="keyboardHidden|screenSize|orientation"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />

        <service android:name=".services.CallService" />

        <meta-data
            android:name="com.quickblox.messages.TYPE"
            android:value="GCM" />
        <meta-data
            android:name="com.quickblox.messages.SENDER_ID"
            android:value="@string/sender_id" />
        <meta-data
            android:name="com.quickblox.messages.QB_ENVIRONMENT"
            android:value="DEVELOPMENT" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".view.ui.CallActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MyCallThemes" />
        <activity
            android:name=".view.ui.PermissionsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.ui.activity.AllFriendQuickBloxActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.ui.activity.TimeKeepingActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.ui.activity.OpponentsActivity"
            android:configChanges="keyboardHidden|screenSize|orientation"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme2" />
        <activity
            android:name=".view.ui.activity.LunchRegistrationActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".view.ui.activity.ProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.ui.activity.ProfileFavouriteActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.ui.activity.SettingActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.ui.activity.SettingChangePwActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.ui.activity.NotificationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.ui.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.ui.activity.ForgetPasswordActivity"
            android:screenOrientation="portrait" />
        <activity
            android:windowSoftInputMode="stateHidden|adjustPan"
            android:name=".view.ui.activity.LunchCalendarRegisActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".view.ui.activity.ForgetPaswordSuccessfullyActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>