<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="news"
            type="com.elcom.hailpt.model.api.response.News" />
    </data>


<android.support.v7.widget.CardView
    android:layout_width="300dp"
   android:layout_margin="10dp"
    android:layout_height="wrap_content"
  >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/imvNews"
            android:scaleType="fitXY"
            android:src="@drawable/banner_ic"
            android:layout_width="match_parent"
            android:layout_height="140dp"

            />

        <TextView
            android:maxLines="2"
            android:id="@+id/tvtitle"
            android:textStyle="bold"
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:textSize="14sp"
            android:textColor="#3B71BC"
            android:text="5 nghề về công nghệ được nhiều nhất năm 2016"
            android:layout_below="@+id/imvNews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:ellipsize="end"
            android:singleLine="true"
            android:id="@+id/tvDes"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:textSize="14sp"
            android:textColor="#54586B"
            android:text="Quản lý giờ giấc, thời gian biểu sẽ giúp bạn quản..."
            android:layout_below="@+id/tvtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/line"
            android:layout_marginTop="8dp"
            android:background="@color/colorLine"
            android:layout_below="@+id/tvDes"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />

            <RelativeLayout
                android:padding="10dp"
                android:layout_below="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Van hoa su kien"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_alignParentRight="true"
                    android:text="23:11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

    </RelativeLayout>

    </android.support.v7.widget.CardView>


</layout>
