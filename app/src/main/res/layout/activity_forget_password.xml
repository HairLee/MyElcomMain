<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.elcom.myelcom.view.ui.activity.ForgetPasswordActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <ImageView
                android:id="@+id/imvBack"
                android:padding="10dp"
                android:layout_centerVertical="true"
                android:src="@drawable/back_ic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textStyle="bold"
                android:layout_centerInParent="true"
                android:textSize="17sp"
                android:text="Quên mật khẩu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_alignParentBottom="true"
                android:background="@color/colorLine"
                android:layout_width="match_parent"
                android:layout_height="1dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_marginTop="100dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center"
                android:text="Nếu bạn quên mật khẩu, chúng tôi sẽ gửi một đường dẫn tới email của bạn để đổi mật khẩu mới."
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:textSize="14sp"
                android:id="@+id/edtEmail"
                android:paddingLeft="10dp"
                android:hint="Địa chỉ email của bạn"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/radius_edittext_white_bg_gray_srtoke_layout"
                android:layout_width="match_parent"
                android:layout_height="45dp" />

            <Button
                android:id="@+id/btnOk"
                android:textColor="@color/white"
                android:text="YÊU CẦU ĐỔI MẬT KHẨU"
                android:background="@drawable/radius_blue_bg_blue_srtoke_layout"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="45dp" />

        </LinearLayout>


    </RelativeLayout>

</layout>