<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_action_buttons"
    style="@style/MatchWidth"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="@dimen/element_fragment_margin_small"
    android:gravity="center_horizontal"
    android:orientation="horizontal">

    <ToggleButton
        android:id="@+id/toggle_mic"
        android:layout_width="@dimen/toggle_button_params"
        android:layout_height="@dimen/toggle_button_params"
        android:layout_gravity="center_vertical"
        android:background="@drawable/call_mute_ic"
        android:checked="true"
        android:gravity="center_vertical|center_horizontal"
        android:textOff=""
        android:textOn="" />



    <ToggleButton
        android:id="@+id/toggle_camera"
        android:layout_width="@dimen/toggle_button_params"
        android:layout_height="@dimen/toggle_button_params"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/element_fragment_margin"
        android:layout_marginStart="@dimen/element_fragment_margin"
        android:background="@drawable/call_video_camera__ic"
        android:checked="true"
        android:visibility="visible"
        android:textOff=""
        android:textOn="" />

    <ImageView
        android:id="@+id/toggle_switch"
        android:layout_width="@dimen/toggle_button_params"
        android:layout_height="@dimen/toggle_button_params"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/element_fragment_margin"
        android:layout_marginStart="@dimen/element_fragment_margin"
        android:src="@drawable/video_call_switch_ic"
        android:checked="true"
         />

    <ImageButton
        android:layout_height="@dimen/toggle_button_params"
        android:layout_width="@dimen/toggle_button_params"
        android:id="@+id/button_hangup_call"
        android:layout_marginLeft="@dimen/element_fragment_margin"
        android:layout_marginStart="@dimen/element_fragment_margin"
        android:background="@drawable/video_call_reject_ic" />

    <ToggleButton
        android:id="@+id/toggle_speaker"
        android:layout_width="@dimen/toggle_button_params"
        android:layout_height="@dimen/toggle_button_params"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/element_fragment_margin"
        android:layout_marginStart="@dimen/element_fragment_margin"
        android:background="@drawable/call_speaker_toggle_background"
        android:checked="true"
        android:visibility="gone"
        android:textOff=""
        android:textOn="" />

</LinearLayout>