<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.elcom.myelcom.view.ui.activity.SettingChangePwActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <ImageView
            android:id="@+id/imvBack"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/back_ic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="#54586B"
            android:layout_centerInParent="true"
            android:textSize="17sp"
            android:text="Đổi mật khẩu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
            <View
                android:layout_alignParentBottom="true"
                android:background="@color/colorLine"
                android:layout_width="match_parent"
                android:layout_height="1dp" />
    </RelativeLayout>
    
   <LinearLayout
       android:layout_marginTop="10dp"
       android:layout_marginLeft="40dp"
       android:layout_marginRight="40dp"
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <TextView
           android:visibility="gone"
           android:textColor="#54586B"
           android:textSize="15sp"
           android:text="Mật khẩu cũ"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />

       <EditText
           android:textSize="15sp"
           android:inputType="textPassword"
           android:paddingLeft="10dp"
           android:hint="Mật khẩu cũ"
           android:id="@+id/edtOldPw"
           android:layout_marginTop="5dp"
           android:background="@drawable/radius_edittext_white_bg_gray_srtoke_layout"
           android:layout_width="match_parent"
           android:layout_height="45dp" />
       <TextView
           android:visibility="gone"
           android:textColor="#54586B"
           android:textSize="15sp"
           android:text="Mật khẩu mới"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />
       
       <EditText
           android:textSize="15sp"
           android:inputType="textPassword"
           android:hint="Mật khẩu mới"
           android:paddingLeft="10dp"
           android:id="@+id/edtNewPw"
           android:layout_marginTop="10dp"
           android:background="@drawable/radius_edittext_white_bg_gray_srtoke_layout"
           android:layout_width="match_parent"
           android:layout_height="45dp" />

       <TextView
           android:visibility="gone"
           android:textColor="#54586B"
           android:textSize="15sp"
           android:layout_marginTop="10dp"
           android:text="Nhập lại mật khẩu mới"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />

       <EditText
           android:textSize="15sp"
           android:inputType="textPassword"
           android:hint="Nhập lại mật khẩu mới"
           android:paddingLeft="10dp"
           android:id="@+id/edtNewPwAgain"
           android:layout_marginTop="10dp"
           android:background="@drawable/radius_edittext_white_bg_gray_srtoke_layout"
           android:layout_width="match_parent"
           android:layout_height="45dp" />
       
       <Button
           android:id="@+id/btnOk"
           android:textColor="@color/white"
           android:text="LƯU CHỈNH SỬA"
           android:layout_marginTop="30dp"
           android:background="@drawable/radius_blue_bg_srtoke_layout"
           android:layout_width="match_parent"
           android:layout_height="45dp" />

   </LinearLayout>

</LinearLayout>
</layout>